[settings]
screenchange-reload = true


[colors]
background     = #2b2a27
background-alt = #444
foreground     = #dfdfdf
foreground-alt = #555
primary        = #ffb52a
secondary      = #e60053
alert          = #bd2c40

arc-fg   = #FFFFFF
arc-bg1  = #303651
arc-blue = #2980b9


[bar/gahag]
bottom = true
width = 100%
height = 23
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

font-0 = fixed:pixelsize=10;3
font-1 = "Wuncon Siji:pixelsize=10;2"
font-2 = "FontAwesome:style=Regular:pixelsize=10;2"
font-3 = "Source Code Pro:pixelsize=15;4"

modules-left = space-blue lambda space-blue left-sep wide-space i3
modules-center = filesystem wide-space memory wide-space cpu wide-space temperature wide-space wlan eth wide-space battery
modules-right = volume wide-space right-sep date space-blue

tray-position = right
tray-padding = 2
tray-background = ${colors.arc-blue}

cursor-click = pointer
cursor-scroll = ns-resize


[module/wide-space]
type    = custom/text
content = "    "


[module/space-blue]
type               = custom/text
content            = " "
content-background = ${colors.arc-blue}


[module/left-sep]
type               = custom/text
content            = "%{T4}%{T-}"
content-foreground = ${colors.arc-blue}
content-background = ${colors.background}


[module/right-sep]
type = custom/text
content            = "%{T4}%{T-}"
content-foreground = ${colors.arc-blue}
content-background = ${colors.background}


[module/lambda]
type = custom/text

content            = "λ"
content-foreground = ${colors.arc-fg}
content-background = ${colors.arc-blue}

click-left = exec rofi -show run


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#2980b9}%mountpoint%%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

spacing = 4


[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

format = <label-state> <label-mode>

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%: %{T4}%name%%{T-}
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%: %{T4}%name%%{T-}
label-unfocused-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %index%: %{T4}%name%%{T-}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2


[module/cpu]
type = internal/cpu
interval = 1

format-prefix = " "
format-prefix-foreground = ${colors.arc-blue}
label = %percentage%%


[module/memory]
type = internal/memory
interval = 1

format-prefix = " "
format-prefix-foreground = ${colors.arc-blue}
label = %percentage_used%%


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.arc-blue}
label-connected = %essid%[%local_ip%]  %{F#2980b9}%{F-} %upspeed%  %{F#2980b9}%{F-} %downspeed%

format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.alert}
label-disconnected = %ifname% disconnected


[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.arc-blue}
label-connected = %local_ip%  %{F#2980b9}%{F-} %upspeed%  %{F#2980b9}%{F-} %downspeed%

format-disconnected-prefix = " "
format-disconnected-prefix-foreground = ${colors.alert}
label-disconnected = %ifname% disconnected


[module/date]
type = internal/date
interval = 5

date = "%d-%m-%y"
date-alt = " %a %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

label = "%time% %date%"
label-foreground = ${colors.arc-fg}
label-background = ${colors.arc-blue}


[module/volume]
type = internal/volume

label-padding = 1

format-volume = <label-volume>
label-volume = " %percentage%%"

format-muted-prefix = " "
format-muted-foreground = ${colors.alert}
label-muted = "muted"
label-muted-foreground = ${colors.foreground-alt}


[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.arc-blue}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.arc-blue}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.arc-blue}
animation-charging-framerate = 750


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.arc-blue}
